@font-face {
font-display: block;
font-family: "{{ name }}";
src: {{{ fontSrc }}};
}

.{{prefix}}::before {
font-family: {{ name }} !important;
font-style: normal;
font-weight: normal !important;
font-variant: normal;
text-transform: none;
line-height: 1;
-webkit-font-smoothing: antialiased;
-moz-osx-font-smoothing: grayscale;
}

{{# each codepoints }}
.{{ ../prefix }}-{{ @key }}::before {
    content: "\\{{ codepoint this }}";
}
{{/ each }}